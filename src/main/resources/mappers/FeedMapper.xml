<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.greengram2.feed.FeedMapper">
    <insert id="insFeed" useGeneratedKeys="true" keyProperty="ifeed">
        INSERT INTO t_feed
        <set>
            iuser = #{iuser}
            <if test=" contents != null and contents != '' ">
                , contents = #{contents}
            </if>
            <if test=" location != null and location != '' ">
                , location = #{location}
            </if>
        </set>
    </insert>

    <insert id="insFeedPics">
        INSERT INTO t_feed_pics
        (ifeed, pic)
        VALUES
        <foreach collection="pics" item="item" open="(" close=")" separator="),(">
            #{ifeed}, #{item}
        </foreach>
    </insert>
</mapper>